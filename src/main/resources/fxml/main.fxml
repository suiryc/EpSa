<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="epsa.controllers.MainController">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="%File">
            <items>
                  <MenuItem mnemonicParsing="false" onAction="#onFileOpen" text="%Open" />
                  <MenuItem fx:id="fileCloseMenu" mnemonicParsing="false" onAction="#onFileClose" text="%Close" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem fx:id="fileSaveMenu" mnemonicParsing="false" onAction="#onFileSave" text="%Save" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" onAction="#onExit" text="%Exit" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="%Edit">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#onEditSchemes" text="%Edit schemes" />
                  <MenuItem mnemonicParsing="false" onAction="#onEditFunds" text="%Edit funds" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onTest" text="Test" />
                  <MenuItem mnemonicParsing="false" onAction="#onFundGraph" text="%Fund graph" />
                  <SeparatorMenuItem mnemonicParsing="false" />
                  <MenuItem mnemonicParsing="false" onAction="#onOptions" text="%Options" />
               </items></Menu>
        </menus>
      </MenuBar>
      <SplitPane fx:id="splitPane" dividerPositions="0.4" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <items>
            <ScrollPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefViewportHeight="145.0" prefViewportWidth="300.0">
               <content>
                  <GridPane hgap="10.0" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" vgap="10.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="-Infinity" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="-Infinity" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <children>
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="%Scheme:" />
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="%Fund:" GridPane.rowIndex="1" />
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="%Availability:" GridPane.rowIndex="2" />
                        <Label fx:id="schemeField" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" />
                        <Label fx:id="fundField" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="availabilityField" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="%Amount:" GridPane.rowIndex="3" />
                        <Label fx:id="amountField" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label minHeight="-Infinity" minWidth="-Infinity" text="%Units:" GridPane.rowIndex="4" />
                        <Label fx:id="unitsField" minHeight="-Infinity" minWidth="-Infinity" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </content>
            </ScrollPane>
            <AnchorPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
               <children>
                  <TableView fx:id="assetsTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0" HBox.hgrow="ALWAYS">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                  </TableView>
               </children>
            </AnchorPane>
         </items>
      </SplitPane>
   </children>
</VBox>
